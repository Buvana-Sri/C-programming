//Difference b/w min & max element in an array
#include<stdio.h>
main()
{
	 int i,n,min,max,diff;
	 scanf("%d",&n);
	 int a[n];
	 for(i=0;i<n;i++)
	 scanf("%d",&a[i]);
	 max=a[0];
	 min=a[0];
	 for(i=0;i<n;i++)
	 {
	 	if(a[i]>max)
	 	max=a[i];
	 	else if(a[i]<min)
	 	min=a[i];
	 	diff=max-min;
	 }
	 printf("%d ",diff);
}
